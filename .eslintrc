{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "linebreak-style": "warn",
      "no-unused-vars": [
        "error",
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "quotes": "off",
      "react/jsx-filename-extension": 0
    }
  }